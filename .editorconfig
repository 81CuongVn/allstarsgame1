# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true

[*.sql]
indent_style = tab

[*.php]
indent_style = tab
end_of_line = lf
insert_final_newline = true

[*.coffee]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = false

[*.js]
indent_style = tab
end_of_line = lf
insert_final_newline = true

[*.css]
indent_style = tab
end_of_line = lf
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
